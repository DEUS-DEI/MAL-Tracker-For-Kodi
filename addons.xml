<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.maltracker"
       name="MAL Tracker"
       version="1.0.0"
       provider-name="MAL-Tracker-Dev">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.31.0"/>
        <import addon="script.module.html5lib" version="0.999.0" optional="true"/>
        <import addon="script.module.pyaes" optional="true"/>
        <import addon="script.module.futures" optional="true"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">MyAnimeList tracker for Kodi</summary>
        <description lang="en_GB">Track, search and update your MyAnimeList anime collection directly from Kodi using the official MAL API v2 with OAuth2 authentication.</description>
        <platform>all</platform>
        <license>MIT</license>
        <website>https://github.com/user/mal-tracker-kodi</website>
        <source>https://github.com/user/mal-tracker-kodi</source>
        <news>v1.0.0 - Initial release with full MAL API v2 compliance</news>
    </extension>
</addon><addon id="repository.maltracker" name="MAL Tracker Repository" version="1.0.0" provider-name="MAL Tracker Dev">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="MAL Tracker Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/username/mal-tracker-repo/main/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/username/mal-tracker-repo/main/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/username/mal-tracker-repo/main/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">MAL Tracker Add-on Repository</summary>
        <summary lang="es">Repositorio de MAL Tracker</summary>
        <description lang="en">Repository to install MAL Tracker addon for Kodi. Integrates MyAnimeList, AniList and multiple anime streaming sites.</description>
        <description lang="es">Repositorio para instalar el addon MAL Tracker en Kodi. Integra MyAnimeList, AniList y múltiples sitios de streaming de anime.</description>
        <disclaimer lang="en">The owners and submitters to this add-on do not host or distribute any of the content displayed by these add-ons nor do they have any affiliation with the content providers.</disclaimer>
        <disclaimer lang="es">Los propietarios y distribuidores de este add-on no proveen ni distribuyen ningún contenido mostrado por el add-on ni tienen afiliación alguna con los proveedores del contenido.</disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <source>https://github.com/username/mal-tracker-repo</source>
    </extension>
</addon></addons>
